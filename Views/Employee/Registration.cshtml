@model Donation_Tracker.DTOs.EmployeeDTO

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    <form action="" method="post">
        <input name="__RequestVerificationToken" type="hidden" value="yourAntiForgeryTokenHere" />

        <div class="form-horizontal">
            <h4>Employee</h4>
            <hr />
            <div class="text-danger">
                <!-- Validation summary placeholder -->
            </div>

            <div class="form-group">
                <label for="Name" class="control-label col-md-2">Name</label>
                <div class="col-md-10">
                    <input id="Name" name="Name" type="text" class="form-control" />
                    <span class="text-danger">
                        @Html.ValidationMessage("Name")
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label for="Email" class="control-label col-md-2">Email</label>
                <div class="col-md-10">
                    <input id="Email" name="Email" type="text" class="form-control" />
                    <span class="text-danger">
                        @Html.ValidationMessage("Email")
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label for="Phone" class="control-label col-md-2">Phone</label>
                <div class="col-md-10">
                    <input id="Phone" name="Phone" type="text" class="form-control" />
                    <span class="text-danger">
                        @Html.ValidationMessage("Phone")
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label for="Address" class="control-label col-md-2">Address</label>
                <div class="col-md-10">
                    <input id="Address" name="Address" type="text" class="form-control" />
                    <span class="text-danger">
                        @Html.ValidationMessage("Address")
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label for="Password" class="control-label col-md-2">Password</label>
                <div class="col-md-10">
                    <input id="Password" name="Password" type="password" class="form-control" />
                    <span class="text-danger">
                        @Html.ValidationMessage("Password")
                    </span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>


    <div>
        @Html.ActionLink("Back to Login", "Login", "Home")
    </div>
</body>
</html>
