@model Donation_Tracker.DTOs.Donor_DetailsDTO

@{
    ViewBag.Title = "Donate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Donate</h2>

<form action="" method="post">
    <input type="hidden" name="__RequestVerificationToken" value="..." />

    <div class="form-horizontal">

        <div class="text-danger"></div> <!-- Validation summary -->

        <div class="form-group">
            <label for="Name" class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <input id="Name" name="Name" class="form-control" type="text" />
                <span class="text-danger"></span> @Html.ValidationMessage("Name")
            </div>
        </div>

        <div class="form-group">
            <label for="Amount" class="control-label col-md-2">Amount</label>
            <div class="col-md-10">
                <input id="Amount" name="Amount" class="form-control" type="number" />
                <span class="text-danger"></span> @Html.ValidationMessage("Amount")
            </div>
        </div>

        <div class="form-group">
            <label for="Date" class="control-label col-md-2">Date</label>
            <div class="col-md-10">
                <input id="Date" name="Date" class="form-control" type="date" />
                <span class="text-danger"></span> @Html.ValidationMessage("Date")
            </div>
        </div>

        <div class="form-group">
            <label for="Donor_Id" class="control-label col-md-2">Donor Id</label>
            <div class="col-md-10">
                <input id="Donor_Id" name="Donor_Id" class="form-control" type="text" />
                <span class="text-danger"></span> @Html.ValidationMessage("Donor_ID")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


<div>
    @Html.ActionLink("Back to DeshBoard", "DeshBoard")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
