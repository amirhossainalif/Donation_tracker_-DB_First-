@model Donation_Tracker.DTOs.DonorDTO

@{
    ViewBag.Title = "Edit_Donor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit_Donor</h2>

<form action="" method="post">
    <input name="__RequestVerificationToken" type="hidden" value="yourAntiForgeryTokenHere" />

    <div class="form-horizontal">
        <div class="text-danger">
            <!-- Validation summary placeholder -->
        </div>
        <input id="Id" name="Id" type="hidden" value="@Model.Id" />

        <div class="form-group">
            <label for="Name" class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <input id="Name" name="Name" type="text" value="@Model.Name" class="form-control" />
                <span class="text-danger">
                    @Html.ValidationMessage("Name")
                </span>
            </div>
        </div>

        <div class="form-group">
            <label for="DOB" class="control-label col-md-2">Date of Birth</label>
            <div class="col-md-10">
                <input id="DOB" name="DOB" type="date" value="@Model.DOB" class="form-control" />
                <span class="text-danger">
                    @Html.ValidationMessage("DOB")
                </span>
            </div>
        </div>

        <div class="form-group">
            <label for="Email" class="control-label col-md-2">Email</label>
            <div class="col-md-10">
                <input id="Email" name="Email" type="text" value="@Model.Email" class="form-control" />
                <span class="text-danger">
                    @Html.ValidationMessage("Email")
                </span>
            </div>
        </div>

        <div class="form-group">
            <label for="Phone" class="control-label col-md-2">Phone</label>
            <div class="col-md-10">
                <input id="Phone" name="Phone" type="text" value="@Model.Phone" class="form-control" />
                <span class="text-danger">
                    @Html.ValidationMessage("Phone")
                </span>
            </div>
        </div>

        <div class="form-group">
            <label for="Address" class="control-label col-md-2">Address</label>
            <div class="col-md-10">
                <input id="Address" name="Address" type="text" value="@Model.Address" class="form-control" />
                <span class="text-danger">
                    @Html.ValidationMessage("Address")
                </span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
